<%- include('includes/head') %>
    <%- include('includes/navbar') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Contatos</h1>
                    <p class="text-center lead">Crie ou edite seus contatos abaixo:</p>

                    <%- include('includes/messages') %>

                        <% if (typeof contato !=='undefined' && contato._id) { %>
                            <form action="/contatos/edit/<%= contato._id %>" method="POST">
                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                <div class="mb-3">
                                    <label for="nome" class="form-label">Nome</label>
                                    <input value="<%= contato.nome %>" type="text" class="form-control" id="nome"
                                        name="nome" required>
                                </div>
                                <div class="mb-3">
                                    <label for="sobrenome" class="form-label">Sobrenome</label>
                                    <input value="<%= contato.sobrenome %>" type="text" class="form-control"
                                        id="sobrenome" name="sobrenome">
                                </div>
                                <div class="mb-3">
                                    <label for="telefone" class="form-label">Telefone</label>
                                    <input value="<%= contato.telefone %>" type="text" class="form-control"
                                        id="telefone" name="telefone">
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <input value="<%= contato.email %>" type="email" class="form-control" id="email"
                                        name="email">
                                </div>
                                <button type="submit" class="btn btn-primary">Editar contato</button>
                            </form>
                            <% } else { %>
                                <form action="/contatos/register" method="POST">
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <div class="mb-3">
                                        <label for="nome" class="form-label">Nome</label>
                                        <input type="text" class="form-control" id="nome" name="nome" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="sobrenome" class="form-label">Sobrenome</label>
                                        <input type="text" class="form-control" id="sobrenome" name="sobrenome">
                                    </div>
                                    <div class="mb-3">
                                        <label for="telefone" class="form-label">Telefone</label>
                                        <input type="text" class="form-control" id="telefone" name="telefone">
                                    </div>
                                    <div class="mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control" id="email" name="email">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Salvar Contato</button>
                                </form>
                                <% } %>
                </div>

                <div class="col-lg-2"></div>
            </div>

            <%- include('includes/footer') %>